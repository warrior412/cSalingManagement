<Window x:Class="LayoutLesson.AutoResizeTextFiled"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoResizeTextFiled" Height="381" Width="369">
    <Grid VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <ScrollViewer>
        <DockPanel Background="#FFB6A3A3" Width="{Binding ElementName=VerticallyExpandMe, Path=Width}" MinHeight="50" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <TextBlock
            x:Name="DataGridTitle"
            VerticalAlignment="Top"
            DockPanel.Dock="Left"
            />
            <TextBox
            Name="VerticallyExpandMe"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            Text="{Binding QueryString}" MaxWidth="60"
            >
            </TextBox>
        </DockPanel>
        </ScrollViewer>
    </Grid>
</Window>
