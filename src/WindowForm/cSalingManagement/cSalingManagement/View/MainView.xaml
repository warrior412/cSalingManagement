<Window x:Class="cSalingManagement.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:cSalingManagement.View.UserControls"
        Title="MainView" Height="500" Width="800" WindowStyle="None"  ResizeMode="CanResizeWithGrip"
        xmlns:View="clr-namespace:cSalingManagement.View.ContentView"
        xmlns:ViewModel="clr-namespace:cSalingManagement.ViewModel.ContentViewModel">
    <Window.Resources>
        <DataTemplate DataType="{x:Type ViewModel:ProductDetailViewModel}">
            <View:ProductDetailView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:ProductListViewModel}">
            <View:ProductListView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" MaxWidth="300" MinWidth="200"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <uc:ExpandMenu Grid.RowSpan="2"></uc:ExpandMenu>
        <uc:TitleBar Grid.Column="1" ></uc:TitleBar>
        <DockPanel Grid.Column="1" Grid.Row="1" Background="{StaticResource MainLightColor}" LastChildFill="True" >
            
        </DockPanel>
    </Grid>
</Window>
